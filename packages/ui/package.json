{
  "name": "@dfinity/http-proxy-ui",
  "version": "0.0.1",
  "description": "Desktop interface to facilitate user interaction with the HTTP Proxy server.",
  "main": "built/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "nodemon",
    "build": "tsc && tsc-alias && pnpm copy-assets",
    "copy-assets": "mkdirp ./built/assets && copyfiles -f ./src/assets/* ./built/assets",
    "lint": "eslint --ext ts,js src",
    "lint:fix": "eslint --ext ts,js --fix src",
    "app:dir": "electron-builder --dir",
    "app:dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dfinity/http-proxy-poc.git"
  },
  "keywords": [
    "ic",
    "icp",
    "http",
    "proxy",
    "dfinity"
  ],
  "author": "Kepler Vital <kepler.vital@dfinity.org>",
  "license": "MIT",
  "engines": {
    "node": ">=18",
    "pnpm": "~8",
    "npm": "please-use-pnpm",
    "yarn": "please-use-pnpm"
  },
  "bugs": {
    "url": "https://github.com/dfinity/http-proxy-poc/issues"
  },
  "homepage": "https://github.com/dfinity/http-proxy-poc#readme",
  "dependencies": {
    "@dfinity/http-proxy-core": "workspace:*",
    "@dfinity/http-proxy-server": "workspace:*"
  },
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "electron": "23.2.1",
    "electron-builder": "23.6.0",
    "mkdirp": "^2.1.6"
  },
  "build": {
    "appId": "com.dfinity.ichttpproxy",
    "productName": "IC HTTP Proxy",
    "nodeVersion": "current",
    "directories": {
      "output": "pkg"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "./src/assets/logo-color@128x128.icns"
    },
    "win": {
      "target": "portable",
      "icon": "./src/assets/logo-color@128x128.ico"
    }
  }
}

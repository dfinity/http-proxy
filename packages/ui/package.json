{
  "name": "@dfinity/http-proxy-ui",
  "version": "0.0.1",
  "description": "Desktop interface to facilitate user interaction with the HTTP Proxy server.",
  "main": "built/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "nodemon",
    "build": "tsc && tsc-alias && yarn copy-assets",
    "copy-assets": "mkdirp ./built/assets && copyfiles -f ./src/assets/* ./built/assets",
    "lint": "eslint --ext ts,js src",
    "lint:fix": "eslint --ext ts,js --fix src",
    "pkg": "electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dfinity/http-proxy.git",
    "directory": "packages/ui"
  },
  "keywords": [
    "ic",
    "icp",
    "http",
    "proxy",
    "dfinity"
  ],
  "author": "Kepler Vital <kepler.vital@dfinity.org>",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=18",
    "npm": "please-use-yarn",
    "pnpm": "please-use-yarn",
    "yarn": "~3"
  },
  "bugs": {
    "url": "https://github.com/dfinity/http-proxy/issues"
  },
  "homepage": "https://github.com/dfinity/http-proxy/tree/main/packages/ui#readme",
  "dependencies": {
    "@dfinity/http-proxy-core": "0.0.1",
    "@dfinity/http-proxy-server": "0.0.1"
  },
  "devDependencies": {
    "@types/node": "^18.14.0",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "copyfiles": "^2.4.1",
    "electron": "23.2.2",
    "electron-builder": "^23.6.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "mkdirp": "^2.1.6",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.4",
    "tsc-alias": "^1.8.5",
    "typescript": "^4.9.5"
  },
  "build": {
    "appId": "com.dfinity.ichttpproxy",
    "productName": "IC HTTP Proxy",
    "nodeVersion": "current",
    "asarUnpack": [
      "node_modules/@dfinity/http-proxy-daemon/bin/*"
    ],
    "directories": {
      "output": "pkg"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "./src/assets/logo@128x128.icns",
      "target": {
        "target": "dmg",
        "arch": [
          "universal"
        ]
      },
      "files": [
        "!bin/http-proxy-daemon-win.exe",
        "!.git/*",
        "!tsconfig.json",
        "!nodemon.json",
        "!.eslintrc.js"
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "./src/assets/logo@128x128.ico",
      "files": [
        "!bin/http-proxy-daemon-macos",
        "!.git/*",
        "!tsconfig.json",
        "!nodemon.json",
        "!.eslintrc.js"
      ]
    }
  }
}
